<odoo>

            <!--    otherstaff Information -->


    <record id = "view_hospital_otherstaff_form" model="ir.ui.view">
            <field name="name">view.hospital.otherstaff.form</field>
            <field name="model">hospital.otherstaff</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="age"/>
                            <field name="gender"/>
                            <field name="contact_no"/>
                            <field name="address"/>
                            <field name="select_position"/>
                            <field name="image" widget="image" style="height:200px;width:200px;"/>
                        </group>
                    </sheet>
                </form>
            </field>
    </record>

            <!--    Tree View (Entered Data List of otherstaff)-->

    <record id = "view_hospital_otherstaff_tree" model="ir.ui.view">
            <field name="name">view.hospital.otherstaff.tree</field>
            <field name="model">hospital.otherstaff</field>
            <field name="arch" type="xml">
                    <tree>
                        <field name="name"/>
                        <field name="age"/>
                        <field name="gender"/>
                        <field name="contact_no"/>
                        <field name="address"/>
                        <field name="select_position"/>
<!--                        <field name="image" widget="image"/>-->
                    </tree>
            </field>
    </record>

            <!--Action of Hospital otherstaff-->

    <record id = "action_hospital_otherstaff" model="ir.actions.act_window">
        <field name="name">Other Staff</field>
        <field name="res_model">hospital.otherstaff</field>
        <field name="view_mode">tree,form</field>
    </record>

            <!--Menu Of Application-->
    <menuitem id="menu_staff" name="Staff" parent="menu_hospital"/>
    <menuitem id="menu_otherstaff" name="Other Staff" parent="menu_staff" action="action_hospital_otherstaff"/>

</odoo>