<odoo>

            <!--    Doctor Information -->


    <record id = "view_hospital_doctor_form" model="ir.ui.view">
            <field name="name">view.hospital.doctor.form</field>
            <field name="model">hospital.doctor</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <field name="image" widget="image" class="oe_avatar" style="margin-top: 30px;" />
                        <div class="oe_button_box" name="button_box">
                            <button name="btn_patient" type="object"
                                    class="oe_stat_button" icon="fa-user">
                            <field name="count_patient" string="Patient" widget="statinfo"/>
                            </button>
                        </div>
                            <group>
                                <field name="name"/>
                                <field name="age"/>
                                <field name="gender"/>
                                <field name="designation"/>
                                <field name="contact_no"/>
                                <field name="address"/>
                            </group>
                    </sheet>
                </form>
            </field>
    </record>

            <!--    Tree View (Entered Data List of doctor)-->

    <record id = "view_hospital_doctor_tree" model="ir.ui.view">
            <field name="name">view.hospital.doctor.tree</field>
            <field name="model">hospital.doctor</field>
            <field name="arch" type="xml">
                    <tree>
                        <field name="name"/>
                        <field name="age"/>
                        <field name="gender"/>
                        <field name="designation"/>
                        <field name="contact_no"/>
<!--                        <field name="address"/>-->

                    </tree>
            </field>
    </record>

            <!--Action of Hospital doctor-->

    <record id = "action_hospital_doctor" model="ir.actions.act_window">
        <field name="name">Doctor</field>
        <field name="res_model">hospital.doctor</field>
        <field name="view_mode">tree,form</field>
    </record>

            <!--Menu Of Application-->
    <menuitem id="menu_staff" name="Staff" parent="menu_hospital"/>
    <menuitem id="menu_doctor" name="Doctor" parent="menu_staff" action="action_hospital_doctor"/>

</odoo>